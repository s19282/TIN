<!DOCTYPE html>
<html lang="pl-PL">
    <head>
        <meta charset="UTF-8">
        <title>Wydział komunikacji</title>
        <link rel="icon" type="image/png" href="/_images/icon.png"/>
        <link rel="stylesheet" href="/_css/style.css">
        <script src="/_js/script.js"></script>
        <% if(navLocation === 'owner' && (formMode === 'edit' || formMode === 'createNem')) { %>
            <script src="/_js/validationCommon.js"></script>
            <script src="/_js/validationOwnerForm.js"></script>
        <% } %>
        <% if(navLocation === 'registration' && (formMode === 'edit' || formMode === 'createNem')) { %>
                <script src="/_js/validationCommon.js"></script>
                <script src="/_js/validationRegistrationForm.js"></script>
        <% } %>
        <% if(navLocation === 'vehicle' && (formMode === 'edit' || formMode === 'createNem')) { %>
                <script src="/_js/validationCommon.js"></script>
                <script src="/_js/validationCarForm.js"></script>
        <% } %>
        <meta name="viewport" content="width=device-width,initial-scale=1" />
    </head>
    <body>
        <header>
            <h1>Wydział komunikacji</h1>
            <img src="/_images/icon.png" alt="WK logo">
        </header>
        <div class="centerBox">
            <nav>
                <ul class="list-actions">
                    <li><a href="/" class="<%= navLocation === 'main' ? 'active' : ''%>">Strona główna</a></li>
                    <% if(loggedUser) {%>
                        <li><a href="/owners" class="<%= navLocation === 'owner' ? 'active' : ''%>">Właściciele</a></li>
                    <%}%>
                    <% if(loggedUser) {%>
                        <li><a href="/registrations" class="<%= navLocation === 'registration' ? 'active' : ''%>">Pojazdy właścicieli</a></li>
                    <%}%>
                    <li><a href="/vehicles" class="<%= navLocation === 'vehicle' ? 'active' : ''%>">Zarejestrowane Pojazdy</a></li>
                </ul>
            </nav>