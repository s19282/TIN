<%- include('../../fragments/header.ejs') %>
            <main>
                <h2>Lista właścicieli</h2>
                <table class="table-list">
                    <thead>
                    <tr>
                        <th>Imię</th>
                        <th>Nazwisko</th>
                        <th>Adres email</th>
                        <th>Numer telefonu</th>
                        <th>Akcje</th>
                    </tr>
                    </thead>
                    <tbody>
                    <% for(let owner of owners) { %>
                        <tr>
                            <td><%= owner.firstName %></td>
                            <td><%= owner.lastName %></td>
                            <td><%= owner.email %></td>
                            <td><%= owner.phoneNumber %></td>
                            <td>
                                <ul class="list-actions">
                                    <li>
                                        <a href="/owners/details/<%=owner.id%>" class="list-actions-button-details">Szczegóły</a>
                                    </li>
                                    <li>
                                        <a href="/owners/edit/<%=owner.id%>" class="list-actions-button-edit">Edytuj</a>
                                    </li>
                                    <li>
                                        <a href="/owners/delete/<%=owner.id%>" class="list-actions-button-delete ">Usuń</a>
                                    </li>
                                </ul>
                            </td>
                        </tr>
                    <% } %>
                    </tbody>
                </table>
                <p><a href="/owners/add" class="button-add">Dodaj nowego właściciela</a> </p>
            </main>
<%- include('../../fragments/footer.ejs') %>